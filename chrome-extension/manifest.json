{
  "manifest_version": 3,
  "name": "Lead Capture for Charter",
  "version": "1.0",
  "description": "Capture lead data from Salesforce and send to your system",
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*",
    "https://hwemookrxvflpinfpkrj.supabase.co/*",
    "https://300e3d3f-6393-4fa8-9ea2-e17c21482f24.lovableproject.com/*",
    "https://*.lovableproject.com/*",
    "https://id-preview--300e3d3f-6393-4fa8-9ea2-e17c21482f24.lovable.app/*",
    "https://*.lovable.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "capture-lead": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Capture lead from current page"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.force.com/*",
        "https://300e3d3f-6393-4fa8-9ea2-e17c21482f24.lovableproject.com/*",
        "https://*.lovableproject.com/*",
        "https://id-preview--300e3d3f-6393-4fa8-9ea2-e17c21482f24.lovable.app/*",
        "https://*.lovable.app/*"
      ],
      "js": ["content.js"]
    }
  ]
}
